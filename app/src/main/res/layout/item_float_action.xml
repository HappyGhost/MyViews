<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/sub_action_shadow" />

        <ImageView
            android:id="@+id/imAction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/online_savings" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@id/imAction"
            android:background="@drawable/action_text_background"
            android:paddingBottom="5dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="5dp"
            android:text="action text"
            android:textColor="@color/colorSemiBlack"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>