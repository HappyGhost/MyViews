<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b">


    <ImageView
        android:id="@+id/imFestivalGraphic"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xmas_keyvisual" />

    <ImageView
        android:id="@+id/imWreath"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xmas_wreath"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/flAnimationCycle"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imBulb12_light"
                android:layout_width="61.9dp"
                android:layout_height="69.2dp"
                android:src="@drawable/bulb_12_light"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imBulb12_normal"
                android:layout_width="37.7dp"
                android:layout_height="45.6dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_12_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imBulb1_light"
                android:layout_width="61.9dp"
                android:layout_height="69.2dp"
                android:src="@drawable/bulb_1_light" />

            <ImageView
                android:id="@+id/imBulb1_normal"
                android:layout_width="37.7dp"
                android:layout_height="45.6dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_1_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="55dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imBulb11_light"
                android:layout_width="61.9dp"
                android:layout_height="69.2dp"
                android:src="@drawable/bulb_11_light" />

            <ImageView
                android:id="@+id/imBulb11_normal"
                android:layout_width="37.7dp"
                android:layout_height="45.6dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_11_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="13dp">

            <ImageView
                android:id="@+id/imBulb3_light"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bulb_3_light" />

            <ImageView
                android:id="@+id/imBulb3_normal"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_3_normal"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="63dp"
            android:layout_marginRight="32dp">

            <ImageView
                android:id="@+id/imBulb2_light"
                android:layout_width="66.7dp"
                android:layout_height="77.7dp"
                android:src="@drawable/bulb_2_light" />

            <ImageView
                android:id="@+id/imBulb2_normal"
                android:layout_width="39dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_2_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="32dp"
            android:layout_marginTop="55dp">

            <ImageView
                android:id="@+id/imBulb4_light"
                android:layout_width="65dp"
                android:layout_height="69dp"
                android:src="@drawable/bulb_4_light" />

            <ImageView
                android:id="@+id/imBulb4_normal"
                android:layout_width="37.7dp"
                android:layout_height="45.5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_4_normal"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imBulb6_light"
                android:layout_width="66.7dp"
                android:layout_height="73.7dp"
                android:src="@drawable/bulb_6_light" />

            <ImageView
                android:id="@+id/imBulb6_normal"
                android:layout_width="39.2dp"
                android:layout_height="46.2dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_6_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="31dp"
            android:layout_marginLeft="55dp">

            <ImageView
                android:id="@+id/imBulb5_light"
                android:layout_width="66.3dp"
                android:layout_height="78.3dp"
                android:src="@drawable/bulb_5_light" />

            <ImageView
                android:id="@+id/imBulb5_normal"
                android:layout_width="38.8dp"
                android:layout_height="50.8dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_5_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="31dp"
            android:layout_marginRight="55dp">

            <ImageView
                android:id="@+id/imBulb7_light"
                android:layout_width="66.7dp"
                android:layout_height="68.5dp"
                android:src="@drawable/bulb_7_light" />

            <ImageView
                android:id="@+id/imBulb7_normal"
                android:layout_width="39dp"
                android:layout_height="41dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_7_normal" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/imBulb9_light"
                android:layout_width="63.4dp"
                android:layout_height="67.3dp"
                android:src="@drawable/bulb_9_light" />

            <ImageView
                android:id="@+id/imBulb9_normal"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_9_normal"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/imBulb8_light"
                android:layout_width="66.5dp"
                android:layout_height="77.7dp"
                android:src="@drawable/bulb_8_light" />

            <ImageView
                android:id="@+id/imBulb8_normal"
                android:layout_width="39dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_8_normal"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginBottom="63dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/imBulb10_light"
                android:layout_width="110dp"
                android:layout_height="88.8dp"
                android:src="@drawable/bulb_10_light" />

            <ImageView
                android:id="@+id/imBulb10_normal"
                android:layout_width="82.9dp"
                android:layout_height="61.3dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bulb_10_normal"
                android:visibility="visible" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtBulbNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="@string/hint_enter_number"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:inputType="number"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animation"
            android:visibility="visible" />


    </LinearLayout>

</RelativeLayout>