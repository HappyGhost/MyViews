<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="@drawable/item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="58dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:textColor="@color/colorSemiBlack"
        android:textSize="@dimen/text_normal"
        android:textStyle="bold" />

    <com.mysource.myview.ui.widget.chart.ChartView
        android:id="@+id/chart_view"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:layout_toLeftOf="@+id/buy_text"
        android:layout_toRightOf="@+id/name_text"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="12dp" />

    <TextView
        android:id="@+id/buy_text"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/percent_text"
        android:gravity="right"
        android:textColor="@color/colorSemiBlack"
        android:textSize="@dimen/text_header"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/percent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_market_up"
        android:drawablePadding="3dp"
        android:gravity="right"
        android:paddingLeft="7dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorSemiBlack"
        android:textSize="@dimen/text_header"
        android:textStyle="bold" />
</RelativeLayout>