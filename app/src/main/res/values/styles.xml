<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="horizontalDiv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivLine</item>
    </style>

    <style name="actionShadowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/sub_action_shadow</item>
    </style>

    <style name="MediumTextBlackValue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MediumTextGreyRegular">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorTextLighter</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="horizontalDivLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivLineLighter</item>
    </style>

    <style name="AppThemeGrey" parent="AppTheme">
        <item name="android:windowBackground">@color/colorGreyBackground</item>
    </style>

</resources>
